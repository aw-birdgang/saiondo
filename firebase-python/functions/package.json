{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "mocha -r ts-node/register 'tests/**/*.test.ts' --timeout 10000",
    "test:watch": "mocha -r ts-node/register tests/**/*.test.ts --watch",
    "create-test-data": "ts-node tests/create-batch-data.ts",
    "create-test-data:count": "ts-node tests/create-batch-data.ts"
  },
  "engines": {
    "node": "22"
  },
  "main": "lib/index.js",
  "dependencies": {
    "axios": "^1.8.4",
    "dotenv": "^16.5.0",
    "firebase": "^11.6.0",
    "firebase-admin": "^11.11.1",
    "firebase-functions": "^6.3.2"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^20.17.32",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "chai": "^4.3.0",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1",
    "mocha": "^9.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5"
  },
  "private": true
}
