{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2015",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "baseUrl": "src",
    "paths": {
      "@common/*": ["common/*"],
      "@modules/*": ["modules/*"],
      "@core/prisma/*": ["../prisma/*"]
    },
    "lib": [
      "es2023"
    ]
  },
  "include": [
    "src/**/*",
    "prisma/seed.ts"
  ]
}
